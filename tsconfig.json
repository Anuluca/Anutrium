{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "*.ts",
    "*.tsx",
    "src/**/*.md", // md文件
    "src/**/*.ts",
    "src/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "verbatimModuleSyntax": true,
    "target": "esnext",
    "module": "node16",
    "strict": false,
    "jsx": "preserve",
    "moduleResolution": "node16",
    "types": ["node"]
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
